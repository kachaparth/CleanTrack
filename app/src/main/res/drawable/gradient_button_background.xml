<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/accent_gradient_end"
                android:endColor="@color/accent_gradient_start"
                android:angle="45" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_hint" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/accent_gradient_start"
                android:endColor="@color/accent_gradient_end"
                android:angle="45" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</selector>